{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build main.cpp",
      "type": "shell",
      "command": "bash cp.sh compile",
    },
    {
      "label": "Run main.cpp",
      "type": "shell",
      "command": "bash cp.sh run",
      "presentation": {
        "reveal": "silent",
      }
    },
    {
      "label": "Flush",
      "type": "shell",
      "command": "bash cp.sh flush ${input:flushname}",
      "presentation": {
        "reveal": "never"
      }
    }
  ],
  "inputs": [
    {
      "id": "flushname",
      "description": "Problem Name: ",
      "default": "garbage",
      "type": "promptString"
    }
  ]
}